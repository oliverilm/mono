{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "target": "ES2022",

        "strict": true,
        "strictNullChecks": true,
    },
    "exclude": ["**/node_modules", "**/dist", "**/.*/"]
}
