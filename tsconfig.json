{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true,
        "target": "ES2022",

        "strict": true,
        "strictNullChecks": true,

        "plugins": [
            {
                "transform": "typia/lib/transform"
            }
        ],
    },
    "exclude": ["**/node_modules", "**/dist", "**/.*/"]
}
